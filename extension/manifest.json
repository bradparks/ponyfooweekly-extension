{
  "name": "Pony Foo Weekly Link Submissions",
  "version": "1.1.0",
  "description": "Easily submit link suggestions to Pony Foo Weekly",
  "homepage_url": "https://github.com/ponyfoo/ponyfooweekly-extension",
  "manifest_version": 2,
  "minimum_chrome_version": "48",
  "applications": { "gecko": { "id": "extensions@ponyfoo.com" } },
  "browser_action": {
    "default_icon": "icon-512x512.png"
  },
  "commands": {
    "toggle-popup": {
      "suggested_key": {
        "default": "Alt+P"
      },
      "description": "Submit to Pony Foo Weekly"
    }
  },
  "web_accessible_resources": ["/popup.html"],
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["/js/content.js"]
  }],
  "background": {
    "scripts": ["js/background.js"],
    "persistent": false
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "icons": {
    "128": "icon-128x128.png",
    "512": "icon-512x512.png"
  }
}
